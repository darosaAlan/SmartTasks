<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F0F4F8">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SmartTasks"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#2C3E50"
        android:layout_marginBottom="32dp" />

    <!-- Botão: Cadastrar Tarefa -->
    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Tarefa"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Botão: Listar Tarefas -->
    <Button
        android:id="@+id/btnListar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listagem de Tarefas"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Botão: Compartilhar Link -->
    <Button
        android:id="@+id/btnCompartilhar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compartilhar Link"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Botão: Análise Inteligente -->
    <Button
        android:id="@+id/btnAnalise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Análise Inteligente"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Botão: Sobre -->
    <Button
        android:id="@+id/btnSobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sobre"
        android:backgroundTint="#607D8B"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
